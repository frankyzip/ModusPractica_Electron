<Window x:Class="ModusPractica.DrMollyGebrianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Dr. Molly Gebrian – Neuroscience &amp; Music Practice"
        Height="760" Width="1080"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <!-- ============ Resources & Styles ============ -->
    <Window.Resources>
        <!-- Converters (WPF-compatible) -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Palette -->
        <SolidColorBrush x:Key="BgCard" Color="#FFFFFFFF" Opacity="0.93"/>
        <SolidColorBrush x:Key="BgAlt"  Color="#FFF6F6F8" />
        <SolidColorBrush x:Key="BorderSoft" Color="#19000000"/>
        <SolidColorBrush x:Key="Accent" Color="#5B8DEF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#7A7A7A"/>

        <!-- Typography -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="Body" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="Muted" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#33000000" BlurRadius="10" ShadowDepth="2" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hyperlinks -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.92"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Bullet list template -->
        <DataTemplate x:Key="BulletTemplate">
            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                <TextBlock Text="•" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <!-- ============ Layout ============ -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource BgAlt}" Padding="22,18" BorderBrush="{StaticResource BorderSoft}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Style="{StaticResource H1}">Neuroscience &amp; Music Practice</TextBlock>
                    <TextBlock Style="{StaticResource Muted}" Margin="0,4,0,0">
                        Evidence-based strategies inspired by Dr. Molly Gebrian
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSluiten" Style="{StaticResource PrimaryButton}" Content="Close"
                            Command="{Binding CloseCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="28"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <StackPanel Grid.Column="0">
                    <!-- Profile card -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}">About Dr. Molly Gebrian</TextBlock>
                            <TextBlock Style="{StaticResource Body}" Margin="0,8,0,0">
                                Violin/viola performer, educator, and neuroscience-informed practice advocate.
                            </TextBlock>

                            <!-- Spacing replaced by margins -->
                            <TextBlock Margin="0,10,0,0">
                                <Hyperlink NavigateUri="https://www.mollygebrian.com/"
                                           RequestNavigate="Hyperlink_RequestNavigate">Official Website</Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="0,6,0,0">
                                <Hyperlink NavigateUri="https://www.youtube.com/@mollygebrian"
                                           RequestNavigate="Hyperlink_RequestNavigate">YouTube Channel</Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="0,6,0,0">
                                <Hyperlink NavigateUri="https://global.oup.com/academic/product/practicing-for-musicians-9780197671626"
                                           RequestNavigate="Hyperlink_RequestNavigate">OUP – Practicing for Musicians (2024)</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Quick links -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}">Quick Links</TextBlock>
                            <TextBlock Margin="0,8,0,0">
                                <Hyperlink NavigateUri="https://psychclassics.yorku.ca/Ebbinghaus/index.htm"
                                           RequestNavigate="Hyperlink_RequestNavigate">Ebbinghaus (1885) – Forgetting Curve</Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="0,6,0,0">
                                <Hyperlink NavigateUri="https://bjorklab.psych.ucla.edu/wp-content/uploads/sites/13/2016/04/Bjork_Bjork_2011.pdf"
                                           RequestNavigate="Hyperlink_RequestNavigate">Bjork &amp; Bjork (2011) – Desirable Difficulties</Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="0,6,0,0">
                                <Hyperlink NavigateUri="https://americanviolasociety.org/resources/journal/"
                                           RequestNavigate="Hyperlink_RequestNavigate">American Viola Society – Journal</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Main content -->
                <StackPanel Grid.Column="2">
                    <!-- Core message -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}">Core Message</TextBlock>
                            <TextBlock Style="{StaticResource Body}" Margin="0,8,0,0">
                                By applying the latest insights from neuroscience and cognitive psychology, we can practice more effectively,
                                accelerate musical learning, and perform with greater confidence.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Educational Background -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Educational Background" IsExpanded="True">
                            <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                Dr. Gebrian studied both neuroscience and viola performance, combining scientific training with a professional
                                career in music. This unique foundation enables practical, research-based strategies for musicians.
                            </TextBlock>
                        </Expander>
                    </Border>

                    <!-- Professional Career -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Professional Career">
                            <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                International performing violist, university educator, and collaborator across research and performance communities —
                                bridging rigorous science with everyday artistic practice.
                            </TextBlock>
                        </Expander>
                    </Border>

                    <!-- Research Focus & Expertise -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Research Focus &amp; Expertise" IsExpanded="True">
                            <ItemsControl ItemTemplate="{StaticResource BulletTemplate}" Margin="0,6,0,0">
                                <system:String>Memory and learning processes in musicians</system:String>
                                <system:String>The role of spaced repetition and retrieval practice</system:String>
                                <system:String>Overcoming performance anxiety via evidence-based methods</system:String>
                                <system:String>Applying cognitive psychology to skill acquisition in music</system:String>
                            </ItemsControl>
                        </Expander>
                    </Border>

                    <!-- OUP Book -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Oxford University Press (July 2024)">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                    <Bold>Practicing for Musicians: From Neuroscience to Stage Performance</Bold> summarizes how neuroscience
                                    informs practice, including step-by-step strategies, examples, and educator-focused guidance.
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Hyperlink NavigateUri="https://global.oup.com/academic/product/practicing-for-musicians-9780197671626"
                                               RequestNavigate="Hyperlink_RequestNavigate">Oxford University Press – Book page</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>

                    <!-- Key topics -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Key Topics Covered" IsExpanded="True">
                            <ItemsControl ItemTemplate="{StaticResource BulletTemplate}" Margin="0,6,0,0">
                                <system:String>The Forgetting Curve and why review is essential</system:String>
                                <system:String>Spaced Repetition for long-term retention</system:String>
                                <system:String>How the brain encodes and retrieves musical information</system:String>
                                <system:String>The impact of sleep and rest on learning</system:String>
                                <system:String>Effective methods for mastering difficult passages</system:String>
                            </ItemsControl>
                        </Expander>
                    </Border>

                    <!-- Supplementary Resources -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Supplementary Resources">
                            <StackPanel>
                                <TextBlock Margin="0,6,0,0">
                                    <Hyperlink NavigateUri="https://www.youtube.com/@mollygebrian"
                                               RequestNavigate="Hyperlink_RequestNavigate">YouTube – Molly Gebrian</Hyperlink>
                                </TextBlock>
                                <TextBlock Margin="0,6,0,0">
                                    <Hyperlink NavigateUri="https://www.mollygebrian.com/"
                                               RequestNavigate="Hyperlink_RequestNavigate">Official Website</Hyperlink>
                                </TextBlock>
                                <TextBlock Margin="0,6,0,0">
                                    <Hyperlink NavigateUri="https://americanviolasociety.org/resources/journal/"
                                               RequestNavigate="Hyperlink_RequestNavigate">American Viola Society – Journal</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>

                    <!-- Forgetting Curve -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="The Forgetting Curve &amp; Spaced Repetition" IsExpanded="True">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                    Without timely review, memory decays quickly. Strategically spacing reviews improves long-term retention and
                                    reduces total practice time for complex repertoire.
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Hyperlink NavigateUri="https://psychclassics.yorku.ca/Ebbinghaus/index.htm"
                                               RequestNavigate="Hyperlink_RequestNavigate">Ebbinghaus (1885) – Memory: A Contribution to Experimental Psychology</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>

                    <!-- Modern research -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Modern Research Support">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                    Deliberate, well-designed practice strategies consistently outperform rote repetition across music cognition and
                                    learning sciences.
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Hyperlink NavigateUri="https://bjorklab.psych.ucla.edu/wp-content/uploads/sites/13/2016/04/Bjork_Bjork_2011.pdf"
                                               RequestNavigate="Hyperlink_RequestNavigate">Bjork &amp; Bjork (2011) – Desirable Difficulties</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>

                    <!-- Neurobiological basis -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Neurobiological Basis">
                            <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                Musical learning strengthens neural pathways through repetition, variation, and rest. Understanding these adaptations
                                helps avoid plateaus and sustain progress.
                            </TextBlock>
                        </Expander>
                    </Border>

                    <!-- Recommendations -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Dr. Gebrian’s Research-Based Recommendations" IsExpanded="True">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,4,0,0">1. Break practice into shorter, focused sessions.</TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,4,0,0">2. Use spaced repetition instead of massed practice.</TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,4,0,0">3. Sleep and rest strategically to consolidate memory.</TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,4,0,0">4. Rotate between sections rather than drilling only one.</TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,4,0,0">5. Practice performing to reduce anxiety and improve stage readiness.</TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>

                    <!-- Performance anxiety -->
                    <Border Style="{StaticResource Card}">
                        <Expander Header="Overcoming Performance Anxiety">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,6,0,0">
                                    Simulate performance conditions, incorporate mental rehearsal, and use breath control to regulate arousal and
                                    improve stage readiness.
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Hyperlink NavigateUri="https://www.oup.com.au/books/higher-education/psychology/9780199586140-psychology-of-music-performance-anxiety"
                                               RequestNavigate="Hyperlink_RequestNavigate">Kenny (2011) – The Psychology of Music Performance Anxiety</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer spacer -->
        <Border Grid.Row="2" Background="{StaticResource BgAlt}" Height="10"/>
    </Grid>
</Window>
