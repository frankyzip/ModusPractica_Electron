<Window x:Class="ModusPractica.SimpleSessionEvaluationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="How did your practice session go?"
        Width="550"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F8F8">

        <Grid Margin="20">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           x:Name="TxtSessionInfo"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Text="Section: Bars 1-8"/>

                <!-- Main Content -->
                <StackPanel Grid.Row="1">

                        <!-- Overall Performance -->
                        <GroupBox Header="Overall Experience"
                                  Margin="0,0,0,15"
                                  Padding="15">
                                <StackPanel>
                                        <TextBlock Text="How did it feel today?"
                                                   Margin="0,0,0,10"
                                                   FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <RadioButton x:Name="RbVeryHard"
                                                             Content="ðŸ˜° Very Hard"
                                                             Margin="0,0,15,0"
                                                             GroupName="Difficulty"/>
                                                <RadioButton x:Name="RbHard"
                                                             Content="ðŸ˜ Hard"
                                                             Margin="0,0,15,0"
                                                             GroupName="Difficulty"/>
                                                <RadioButton x:Name="RbOkay"
                                                             Content="ðŸ™‚ Okay"
                                                             Margin="0,0,15,0"
                                                             GroupName="Difficulty"
                                                             IsChecked="True"/>
                                                <RadioButton x:Name="RbEasy"
                                                             Content="ðŸ˜Š Easy"
                                                             Margin="0,0,15,0"
                                                             GroupName="Difficulty"/>
                                                <RadioButton x:Name="RbVeryEasy"
                                                             Content="ðŸŽ‰ Very Easy"
                                                             GroupName="Difficulty"/>
                                        </StackPanel>
                                </StackPanel>
                        </GroupBox>

                        <!-- Quick Estimates -->
                        <GroupBox Header="Quick Estimates"
                                  Margin="0,0,0,15"
                                  Padding="15">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="About how many times did you play it correctly?"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,0,10"/>
                                        <ComboBox x:Name="CbRepetitions"
                                                  Grid.Row="0"
                                                  Grid.Column="1"
                                                  Margin="0,0,0,10">
                                                <ComboBoxItem Content="1-2"
                                                              Tag="2"/>
                                                <ComboBoxItem Content="3-4"
                                                              Tag="4"/>
                                                <ComboBoxItem Content="5-6"
                                                              Tag="6"
                                                              IsSelected="True"/>
                                                <ComboBoxItem Content="7-8"
                                                              Tag="8"/>
                                                <ComboBoxItem Content="9-10"
                                                              Tag="10"/>
                                                <ComboBoxItem Content="10+"
                                                              Tag="12"/>
                                        </ComboBox>

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="Did this feel harder than expected?"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox x:Name="CbExpectation"
                                                  Grid.Row="1"
                                                  Grid.Column="1">
                                                <ComboBoxItem Content="Much harder"
                                                              Tag="HarderThanExpected"/>
                                                <ComboBoxItem Content="A bit harder"
                                                              Tag="SlightlyHarder"/>
                                                <ComboBoxItem Content="As expected"
                                                              Tag="AsExpected"
                                                              IsSelected="True"/>
                                                <ComboBoxItem Content="Easier"
                                                              Tag="Easier"/>
                                        </ComboBox>
                                </Grid>
                        </GroupBox>



                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                        <Button x:Name="BtnCancel"
                                Content="Cancel"
                                Width="80"
                                Height="30"
                                Margin="0,0,10,0"
                                Click="BtnCancel_Click"/>
                        <Button x:Name="BtnSave"
                                Content="Save &amp; Continue"
                                Width="120"
                                Height="30"
                                IsDefault="True"
                                Click="BtnSave_Click"/>
                </StackPanel>
        </Grid>
</Window>