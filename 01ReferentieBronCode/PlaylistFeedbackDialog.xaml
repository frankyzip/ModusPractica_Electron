<Window x:Class="ModusPractica.PlaylistFeedbackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Practice Session Feedback - Dr. Gebrian's Method"
        Height="380"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#17A2B8"
                Padding="20,15">
            <StackPanel>
                <TextBlock Name="TxtSessionTitle"
                           Text="ðŸŽµ How was this practice session?"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Name="TxtSectionInfo"
                           Text="Section: Bars 1-8 (2 minutes)"
                           Foreground="#D1ECF1"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                VerticalScrollBarVisibility="Auto"
                Padding="25">
            <StackPanel>

                <!-- Difficulty Rating -->
                <TextBlock Text="How difficult was this section for you today?"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <StackPanel Name="DifficultyPanel"
                        Orientation="Vertical"
                        Margin="10,0,0,20">
                    <RadioButton Name="RbVeryEasy"
                            Content="ðŸ˜Š Very Easy - I could play this perfectly"
                                 GroupName="Difficulty"
                            Margin="0,5"
                            FontSize="12"/>
                    <RadioButton Name="RbEasy"
                            Content="ðŸ™‚ Easy - Minor challenges, mostly smooth"
                                 GroupName="Difficulty"
                            Margin="0,5"
                            FontSize="12"/>
                    <RadioButton Name="RbModerate"
                            Content="ðŸ˜ Moderate - Some struggles, need more practice"
                                 GroupName="Difficulty"
                            Margin="0,5"
                            FontSize="12"
                            IsChecked="True"/>
                    <RadioButton Name="RbHard"
                            Content="ðŸ˜“ Hard - Significant challenges, frustrating"
                                 GroupName="Difficulty"
                            Margin="0,5"
                            FontSize="12"/>
                    <RadioButton Name="RbVeryHard"
                            Content="ðŸ˜« Very Hard - Extremely difficult, overwhelmed"
                                 GroupName="Difficulty"
                            Margin="0,5"
                            FontSize="12"/>
                </StackPanel>

                <!-- Quality Rating -->
                <TextBlock Text="How was the quality of your practice?"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,10,0,10"/>

                <StackPanel Name="QualityPanel"
                        Orientation="Vertical"
                        Margin="10,0,0,20">
                    <RadioButton Name="RbExcellent"
                            Content="ðŸŽ¯ Excellent - Focused, productive, achieved goals"
                                 GroupName="Quality"
                            Margin="0,5"
                            FontSize="12"/>
                    <RadioButton Name="RbGood"
                            Content="âœ… Good - Generally productive with some progress"
                                 GroupName="Quality"
                            Margin="0,5"
                            FontSize="12"
                            IsChecked="True"/>
                    <RadioButton Name="RbOkay"
                            Content="ðŸ¤” Okay - Some progress but could be better"
                                 GroupName="Quality"
                            Margin="0,5"
                            FontSize="12"/>
                    <RadioButton Name="RbPoor"
                            Content="ðŸ˜ž Poor - Struggled to focus or make progress"
                                 GroupName="Quality"
                            Margin="0,5"
                            FontSize="12"/>
                </StackPanel>

                <!-- Optional Notes -->
                <TextBlock Text="Optional notes:"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,10,0,5"/>
                <TextBox Name="TxtNotes"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="8"
                         Background="White"
                         Margin="0,0,0,10"
                         MaxLength="200"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="(Optional: specific challenges, breakthroughs, tempo issues, etc.)"
                           FontStyle="Italic"
                           FontSize="11"
                           Foreground="Gray"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Name="BtnSave"
                        Content="âœ… Save Feedback"
                        Click="BtnSave_Click"
                        Background="#28A745"
                        Foreground="White"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        BorderThickness="0"/>
                <Button Name="BtnCancel"
                        Content="Cancel"
                        Click="BtnCancel_Click"
                        Background="#6C757D"
                        Foreground="White"
                        Padding="15,8"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
