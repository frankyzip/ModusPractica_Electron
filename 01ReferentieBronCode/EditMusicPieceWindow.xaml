<Window x:Class="ModusPractica.EditMusicPieceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModusPractica"
        mc:Ignorable="d"
        Title="Edit Music Piece" Height="330" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Edit Music Piece"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20" />

        <!-- Title Field -->
        <Label Grid.Row="1" Grid.Column="0" Content="Title:"
               VerticalAlignment="Center" Margin="0,5" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtTitle"
                 Margin="0,5" Padding="5" />

        <!-- Composer Field -->
        <Label Grid.Row="2" Grid.Column="0" Content="Composer:"
               VerticalAlignment="Center" Margin="0,5" />
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtComposer"
                 Margin="0,5" Padding="5" />

        <!-- Creation Date Display (Read-only) -->
        <Label Grid.Row="3" Grid.Column="0" Content="Creation Date:"
               VerticalAlignment="Center" Margin="0,5" />
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtCreationDate"
                 IsReadOnly="True" Background="#F0F0F0"
                 Margin="0,5" Padding="5" />

        <!-- Progress Display (Read-only) -->
        <Label Grid.Row="4" Grid.Column="0" Content="Progress:"
               VerticalAlignment="Center" Margin="0,5" />
        <ProgressBar Grid.Row="4" Grid.Column="1" x:Name="PbProgress"
                     Minimum="0" Maximum="100" Height="20"
                     Margin="0,5" />
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtProgress"
                   Text="0%" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <!-- Note about progress -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Note: Progress updates automatically based on practice sessions."
                   Foreground="Gray" FontStyle="Italic"
                   TextWrapping="Wrap" Margin="0,10" />

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSave" Content="Save" Width="80"
                    Margin="5" Padding="5" Click="BtnSave_Click" />
            <Button x:Name="BtnCancel" Content="Cancel" Width="80"
                    Margin="5" Padding="5" Click="BtnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>