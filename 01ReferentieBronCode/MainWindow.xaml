                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Collapsed"/>
                                                                                <Setter Property="Margin"
                                                                                        Value="2,0,0,0"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Text, ElementName=textSource}"
                                                                                                 Value="">
                                                                                        <Setter Property="Visibility"
                                                                                                Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
