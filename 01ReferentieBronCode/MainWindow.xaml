                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0"
                                              Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Text="Note Entries"/>

                                            <Button
                                                x:Name="BtnAddNote"
                                                Grid.Column="1"
                                                Padding="8,3"
                                                Command="{Binding NotesViewModel.AddNoteCommand}"
                                                Content="New Note"/>
