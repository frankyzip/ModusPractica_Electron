                                        <ListView
                                            Name="LvNotes"
                                            Grid.Row="1"
                                            Margin="0,0,0,10"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            ItemsSource="{Binding NotesViewModel.NoteEntries}"
