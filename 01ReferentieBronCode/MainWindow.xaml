                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            x:Name="TxtNoteDate"
                                            Grid.Row="0"
                                            Margin="0,0,0,10"
                                            Text="{Binding NotesViewModel.CurrentNote.CreationDate, StringFormat='Date: {0:g}'}"/>

                                        <TextBox
                                            x:Name="TxtNoteTitle"
                                            Grid.Row="1"
                                            Margin="0,0,0,10"
                                            Padding="5"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            Text="{Binding NotesViewModel.CurrentNote.Title, UpdateSourceTrigger=PropertyChanged}">
