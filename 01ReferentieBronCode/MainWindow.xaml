                                                    Content="Add"
                                                    Foreground="White"/>

                                                <Button
                                                    Name="BtnOpenCalendarFromBarSections"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#FF6B35"
                                                    Click="BtnOpenCalendarFromBarSections_Click"
                                                    Content="📅 Calendar"
                                                    Foreground="White"/>

                                                <Button
                                                    x:Name="BtnOpenPlaylistManagerFromBarSections"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#20B2AA"
                                                    Click="BtnOpenPlaylistManagerFromBarSections_Click"
                                                    Content="📋 Interleaved"
                                                    Foreground="White"/>

                                                <Button
                                                    x:Name="BtnOpenFreePracticeWindow"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#FF5733"
                                                    Click="BtnOpenFreePracticeWindow_Click"
                                                    Content="🎵 Free Practice"
                                                    Foreground="White"/>

                                                <!-- Move Sight Reading here between Free Practice and Statistics -->
                                                <Button
                                                    x:Name="BtnOpenSightReading"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#6C63FF"
                                                    Click="BtnOpenSightReading_Click"
                                                    Content="👁️ Sight Reading"
                                                    Foreground="White"/>

                                                <Button
                                                    x:Name="BtnOpenStatistics"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#4A86E8"
                                                    Click="MenuShowStatistics_Click"
                                                    Content="📊 Statistics"
                                                    Foreground="White"/>

                                                <Button
                                                    x:Name="BtnOpenOverallTimer"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#28A745"
                                                    Click="MenuShowOverallTimer_Click"
                                                    Content="⏱️ Overall Timer"
                                                    Foreground="White"/>

                                                <!-- YouTube Quick Link button -->
                                                <Button
                                                    x:Name="BtnOpenYouTubeLink"
                                                    Width="120"
                                                    Margin="0,0,10,0"
                                                    Padding="15,5"
                                                    Background="#FF0000"
                                                    Click="BtnOpenYouTubeLink_Click"
                                                    Foreground="White">
                                                    <Button.Content>▶️ YouTube</Button.Content>
                                                    <Button.ToolTip>
                                                        <ToolTip Background="#FFF9C4">
                                                            <StackPanel>
                                                                <TextBlock Text="YouTube Quick Link"
                                                                        FontWeight="Bold"/>
                                                                <TextBlock Text="Click to open the link. Right-click to set or change the link."/>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
