<Window
    x:Class="ModusPractica.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModusPractica"
    xmlns:views="clr-namespace:ModusPractica.Views"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Modus Practica"
    Width="1200"
    Height="700"
    Background="#F8F8F8"
    FocusManager.FocusedElement="{Binding ElementName=LvMusicPieces}"
    Icon="/MP.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- Lifecycle State Enum Provider -->
        <ObjectDataProvider x:Key="LifecycleStatesProvider"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:LifecycleState"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="ToolbarButton"
               TargetType="Button">
            <Setter Property="MinWidth"
                    Value="120"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="Margin"
                    Value="6,0,0,0"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--  Menu  -->
            <RowDefinition Height="*"/>
            <!--  Hoofdcontent  -->
            <RowDefinition Height="Auto"/>
            <!--  StatusBar  -->
        </Grid.RowDefinitions>

        <Menu Grid.Row="0"
              Background="#F0F0F0">
            <MenuItem Header="File">
                <MenuItem Click="MenuCreateBackup_Click"
                          Header="Create Data Backup..."/>
                <MenuItem
                    x:Name="MenuRestoreBackup"
                    Click="MenuRestoreBackup_Click"
                    Header="Restore Data Backup..."/>
                <Separator/>

                <Separator/>
                <MenuItem Click="MenuSettings_Click"
                          Header="Settings..."/>
                <Separator/>
                <MenuItem
                    x:Name="MenuExit"
                    Click="MenuExit_Click"
                    Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem
                    x:Name="MenuSpacedPracticeHelp"
                    Click="OpenDrGebrianWindow_Click"
                    Header="Spaced Practice Explanation"/>
                <MenuItem
                    x:Name="MenuPracticeTips"
                    Click="MenuPracticeTips_Click"
                    Header="Practice Tips"/>
                <MenuItem
                    x:Name="MenuUserManual"
                    Click="MenuUserManual_Click"
                    Header="User Manual"/>
                <MenuItem
                    x:Name="MenuFutureOfPractice"
                    Click="MenuFutureOfPractice_Click"
                    Header="The Future of Musical Practice"/>
                <Separator/>
                <MenuItem
                    x:Name="MenuUpdatesList"
                    Click="MenuUpdatesList_Click"
                    Header="Updates List"/>
                <MenuItem
                    x:Name="MenuReadMe"
                    Click="MenuReadMe_Click"
                    Header="Read Me"/>
                <Separator/>
                <MenuItem
                    x:Name="MenuAbout"
                    Click="MenuAbout_Click"
                    Header="About Modus Practica"/>
            </MenuItem>
        </Menu>

        <!--  Hoofdcontent Grid  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!--  Nieuwe rij voor TxtStartupStatus  -->
                <RowDefinition Height="*"/>
                <!--  Bestaande content  -->
            </Grid.RowDefinitions>

            <!--  Startup Status TextBlock  -->
            <TextBlock
                x:Name="TxtStartupStatus"
                Grid.Row="0"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="14"
                Foreground="DarkBlue"
                TextWrapping="Wrap"
                Visibility="Collapsed"/>

            <!--  Bestaande content van de MainWindow (ListViews, TabControl, etc.)  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"
                                      MinWidth="350"
                                      MaxWidth="350"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      Margin="0,0,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="6,10,6,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#333333"
                                Text="Music Pieces"/>

                            <TextBox
                                Name="TxtSearch"
                                Grid.Column="1"
                                Width="120"
                                Margin="5,0,0,0"
                                Padding="5,3"
                                VerticalAlignment="Center"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                TextChanged="TxtSearch_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius"
                                                Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="#555555"
                                Text="Sort by:"/>

                            <ComboBox
                                Name="CbSortBy"
                                Grid.Column="1"
                                Width="100"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                SelectedIndex="0"
                                SelectionChanged="CbSortBy_SelectionChanged">
                                <ComboBoxItem Content="Title"
                                              Tag="Title"/>
                                <ComboBoxItem Content="Composer"
                                              Tag="Composer"/>
                                <ComboBoxItem Content="Progress"
                                              Tag="Progress"/>
                                <ComboBoxItem Content="Creation Date"
                                              Tag="CreationDate"/>
                                <ComboBoxItem Content="Color"
                                              Tag="Color"/>
                            </ComboBox>

                            <Button
                                Name="BtnSortDirection"
                                Grid.Column="2"
                                Width="35"
                                Height="25"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Background="#F0F0F0"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                Click="BtnSortDirection_Click"
                                Content="↑"
                                FontSize="14"
                                ToolTip="Toggle sort direction (A-Z / Z-A)"/>
                        </Grid>
                    </Grid>

                    <ListView
                        Name="LvMusicPieces"
                        Grid.Row="1"
                        Margin="6,0,6,10"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="LvMusicPieces_SelectionChanged">
                        <ListView.Resources>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Padding"
                                        Value="5"/>
                                <Setter Property="Margin"
                                        Value="0,2"/>
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border
                                                x:Name="Border"
                                                Margin="1"
                                                Padding="{TemplateBinding Padding}"
                                                Background="{Binding ColorBrush}"
                                                BorderThickness="0"
                                                CornerRadius="4">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter TargetName="Border"
                                                            Property="BorderThickness"
                                                            Value="2"/>
                                                    <Setter TargetName="Border"
                                                            Property="BorderBrush"
                                                            Value="#777777"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter TargetName="Border"
                                                            Property="BorderThickness"
                                                            Value="2"/>
                                                    <Setter TargetName="Border"
                                                            Property="BorderBrush"
                                                            Value="#AAAAAA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            TextWrapping="Wrap"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Title}"/>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal"
                                            Visibility="{Binding IsPaused, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Foreground="#FF6600"
                                                Text="PAUSED"/>
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#FF6600"
                                                Text="{Binding PauseUntilDate, StringFormat=until {0:d}}"/>
                                        </StackPanel>

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5,0,8"
                                            Foreground="#555555"
                                            TextTrimming="CharacterEllipsis">
                                            <Run Text="{Binding Composer}"/>
                                            <Run Foreground="#777777"
                                                 Text=" • "/>
                                            <Run Foreground="#777777"
                                                 Text="{Binding CreationDate, StringFormat=d}"/>
                                        </TextBlock>

                                        <Grid
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Height="18">
                                            <ProgressBar Maximum="100"
                                                         Value="{Binding Progress}"
                                                         ToolTip="Voortgang gebaseerd op succesratio van de laatste 7 oefensessies van dit stuk"/>
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="10"
                                                FontWeight="SemiBold"
                                                Foreground="#555">
                                                <Run Text="{Binding Progress, StringFormat={}{0:0}%}"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- NEW: Readiness indicator -->
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5,0,0"
                                            Orientation="Horizontal">
                                            <!-- Average Success Ratio -->
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#777777"
                                                Text="Avg: "/>
                                            <TextBlock
                                                FontSize="10"
                                                FontWeight="SemiBold"
                                                Text="{Binding AverageSuccessRatio, StringFormat={}{0:P0}, TargetNullValue='—'}"
                                                Foreground="#555555"/>

                                            <TextBlock
                                                Margin="8,0"
                                                FontSize="10"
                                                Foreground="#CCCCCC"
                                                Text="|"/>

                                            <!-- Weakest Section with Smart Color Coding -->
                                            <TextBlock
                                                x:Name="WeakestSectionIcon"
                                                FontSize="10"
                                                Visibility="{Binding LowestSuccessRatio, Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <!-- Default: Warning (below average) -->
                                                        <Setter Property="Text"
                                                                Value="⚠️ "/>
                                                        <Style.Triggers>
                                                            <!-- Green checkmark when >= average -->
                                                            <DataTrigger Binding="{Binding IsLowestAboveOrEqualAverage}"
                                                                         Value="True">
                                                                <Setter Property="Text"
                                                                        Value="✓ "/>
                                                            </DataTrigger>
                                                            <!-- Red alert when critically low (< 60%) -->
                                                            <DataTrigger Binding="{Binding IsLowestCriticallyLow}"
                                                                         Value="True">
                                                                <Setter Property="Text"
                                                                        Value="❗ "/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock
                                                FontSize="10"
                                                FontWeight="SemiBold"
                                                Text="{Binding LowestSuccessRatio, StringFormat={}{0:P0}, TargetNullValue=''}"
                                                Visibility="{Binding LowestSuccessRatio, Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <!-- Default: Orange (below average) -->
                                                        <Setter Property="Foreground"
                                                                Value="#FF6600"/>
                                                        <Style.Triggers>
                                                            <!-- Green when >= average -->
                                                            <DataTrigger Binding="{Binding IsLowestAboveOrEqualAverage}"
                                                                         Value="True">
                                                                <Setter Property="Foreground"
                                                                        Value="#228B22"/>
                                                            </DataTrigger>
                                                            <!-- Red when critically low (< 60%) -->
                                                            <DataTrigger Binding="{Binding IsLowestCriticallyLow}"
                                                                         Value="True">
                                                                <Setter Property="Foreground"
                                                                        Value="#DC143C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock
                                                Margin="8,0"
                                                FontSize="10"
                                                Foreground="#CCCCCC"
                                                Text="|"/>

                                            <!-- Ready Status -->
                                            <TextBlock FontSize="10"
                                                       FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground"
                                                                Value="#AAAAAA"/>
                                                        <Setter Property="Text"
                                                                Value="No data"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsReadyForPerformance}"
                                                                         Value="True">
                                                                <Setter Property="Text"
                                                                        Value="✓ Ready"/>
                                                                <Setter Property="Foreground"
                                                                        Value="#228B22"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsReadyForPerformance}"
                                                                         Value="False">
                                                                <Setter Property="Text"
                                                                        Value="Not Ready"/>
                                                                <Setter Property="Foreground"
                                                                        Value="#FF6600"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Set color">
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Blue"
                                        Tag="PastelBlue">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelBlue}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Green"
                                        Tag="PastelGreen">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelGreen}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Pink"
                                        Tag="PastelPink">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelPink}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Purple"
                                        Tag="PastelPurple">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelPurple}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Yellow"
                                        Tag="PastelYellow">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelYellow}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Orange"
                                        Tag="PastelOrange">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelOrange}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Teal"
                                        Tag="PastelTeal">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelTeal}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Click="SetColor_Click"
                                        Header="Red"
                                        Tag="PastelRed">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="16"
                                                Height="16"
                                                Fill="{StaticResource PastelRed}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Click="EditMusicPiece_Click"
                                          Header="Edit"/>
                                <MenuItem Click="DeleteMusicPiece_Click"
                                          Header="Delete Permanently"/>
                                <MenuItem Click="PauseMusicPiece_Click"
                                          Header="Pause..."/>
                                <MenuItem
                                    Click="ResumeMusicPiece_Click"
                                    Header="Resume Now"
                                    IsEnabled="{Binding IsPaused}"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>

                    <StackPanel
                        Grid.Row="2"
                        Margin="6,0,6,10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="BtnNewMusicPiece"
                            Width="110"
                            Height="32"
                            Margin="0,0,10,0"
                            Background="#4A86E8"
                            Click="BtnNewMusicPiece_Click"
                            Content="New Music Piece"
                            Foreground="White">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"
                                            Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>

                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Stretch"
                    Background="#E0E0E0"
                    IsEnabled="False"
                    IsHitTestVisible="False"
                    Focusable="False"
                    Cursor="Arrow"/>

                <Border
                    Grid.Column="2"
                    Margin="10"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Padding="15"
                            BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Name="BorderSelectedMusicPieceInfo"
                                        Grid.Column="0"
                                        Padding="12,8"
                                        CornerRadius="6"
                                        Background="Transparent"
                                        BorderBrush="#40000000"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock
                                            Name="TxtSelectedMusicPieceTitle"
                                            FontFamily="{StaticResource PlayfairDisplay}"
                                            FontSize="28"
                                            FontStyle="Italic"
                                            FontWeight="SemiBold"
                                            Foreground="#333333"
                                            Text="No music piece selected"/>
                                        <TextBlock
                                            Name="TxtSelectedMusicPieceComposer"
                                            Margin="0,4,0,0"
                                            FontSize="14"
                                            Foreground="#555555"
                                            Text=""
                                            Visibility="Collapsed"/>
                                    </StackPanel>
                                </Border>

                                <!-- Right header area: Profile card + Today's Practice card -->
                                <Grid Grid.Column="1"
                                      Margin="20,0,0,0">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                SnapsToDevicePixels="True">
                                        <!-- Profile card -->
                                        <Border
                                            Padding="8"
                                            Background="White"
                                            BorderBrush="#C99700"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Margin="0,0,10,0">
                                            <StackPanel VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                <TextBlock
                                                    Text="Profile"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Foreground="#C99700"
                                                    TextAlignment="Center"
                                                    Margin="0,0,0,6"/>
                                                <TextBlock
                                                    x:Name="TxtProfileName"
                                                    Text="-"
                                                    FontSize="26"
                                                    FontWeight="Bold"
                                                    Foreground="#C99700"
                                                    TextAlignment="Center"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Today's Practice card -->
                                        <Border
                                            Padding="8"
                                            Background="White"
                                            BorderBrush="#1976D2"
                                            BorderThickness="2"
                                            CornerRadius="8">
                                            <StackPanel VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                <TextBlock
                                                    Text="Today's Practice"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Foreground="#1976D2"
                                                    TextAlignment="Center"
                                                    Margin="0,0,0,6"/>
                                                <TextBlock
                                                    x:Name="TxtTodayPracticeTimeDisplay"
                                                    Text="0 min"
                                                    FontSize="26"
                                                    FontWeight="Bold"
                                                    Foreground="#1976D2"
                                                    TextAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <TabControl
                            Grid.Row="1"
                            Margin="10"
                            BorderThickness="0"
                            SelectionChanged="TabControl_SelectionChanged">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Padding"
                                            Value="12,8"/>
                                    <Setter Property="FontSize"
                                            Value="13"/>
                                    <Setter Property="Foreground"
                                            Value="#333333"/>
                                    <Setter Property="Background"
                                            Value="#F0F0F0"/>
                                </Style>
                            </TabControl.Resources>

                            <TabItem x:Name="TabBarSections"
                                     Header="Chunk Sections">
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="#F8F8F8"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Width="120"
                                                Margin="0,0,10,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="Add new Chunk:"/>
                                            <TextBox
                                                x:Name="txtBarNumber"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="0,0,10,0"
                                                Padding="5,3"
                                                InputScope="Number"
                                                KeyDown="BarSectionInput_KeyDown"
                                                LostFocus="TxtBarNumber_LostFocus">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Grid>
                                                                        <TextBox
                                                                            x:Name="textSource"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                                        <TextBlock
                                                                            Padding="{TemplateBinding Padding}"
                                                                            Foreground="DarkGray"
                                                                            IsHitTestVisible="False"
                                                                            Text="01-05">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Visibility"
                                                                                            Value="Collapsed"/>
