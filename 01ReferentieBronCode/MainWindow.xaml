                                                        <ContextMenu>
                                                            <MenuItem Header="Set YouTube Link..."
                                                                    Click="BtnYouTubeSetLink_Click"/>
                                                            <MenuItem Header="Clear Link"
                                                                    Click="BtnYouTubeClearLink_Click"/>
                                                        </ContextMenu>
                                                    </Button.ContextMenu>
                                                </Button>

                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <DataGrid
                                            Name="DgBarSections"
                                            Grid.Row="0"
                                            AutoGenerateColumns="False"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            CanUserAddRows="False"
                                            CellEditEnding="DgBarSections_CellEditEnding"
                                            GridLinesVisibility="Horizontal"
                                            HeadersVisibility="Column"
                                            IsReadOnly="False"
                                            SelectionChanged="DgBarSections_SelectionChanged">

                                            <!-- Row Style: Dim Inactive Sections -->
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <!-- Row-level tooltip with Description -->
                                                    <Setter Property="ToolTip">
                                                        <Setter.Value>
                                                            <ToolTip
                                                                Background="#FFF9C4"
                                                                ToolTipService.InitialShowDelay="350"
                                                                ToolTipService.ShowDuration="20000">
                                                                <TextBlock Text="{Binding Description}"
                                                                           TextWrapping="Wrap"
                                                                           MaxWidth="450"/>
                                                            </ToolTip>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding LifecycleState}"
                                                                     Value="{x:Static local:LifecycleState.Inactive}">
                                                            <Setter Property="Opacity"
                                                                    Value="0.5"/>
                                                            <Setter Property="FontStyle"
                                                                    Value="Italic"/>
                                                        </DataTrigger>
                                                        <!-- Hide tooltip when Description is null/empty -->
                                                        <DataTrigger Binding="{Binding Description}"
                                                                     Value="{x:Null}">
                                                            <Setter Property="ToolTip"
                                                                    Value="{x:Null}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Description}"
                                                                     Value="">
                                                            <Setter Property="ToolTip"
                                                                    Value="{x:Null}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="80"
                                                    Binding="{Binding BarRange}"
                                                    Header="Chunk Sect.">
                                                    <!-- Tooltip across the whole cell -->
                                                    <DataGridTextColumn.CellStyle>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="ToolTip">
                                                                <Setter.Value>
                                                                    <ToolTip Background="#FFF9C4">
                                                                        <TextBlock Text="{Binding Description}"
                                                                                   TextWrapping="Wrap"
                                                                                   MaxWidth="400"/>
                                                                    </ToolTip>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Description}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="ToolTip"
                                                                            Value="{x:Null}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Description}"
                                                                             Value="">
                                                                    <Setter Property="ToolTip"
                                                                            Value="{x:Null}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGridTextColumn.CellStyle>
                                                    <!-- Tooltip while editing -->
                                                    <DataGridTextColumn.EditingElementStyle>
                                                        <Style TargetType="TextBox">
                                                            <Setter Property="ToolTip">
                                                                <Setter.Value>
                                                                    <ToolTip Background="#FFF9C4">
                                                                        <TextBlock Text="{Binding Description}"
                                                                                   TextWrapping="Wrap"
                                                                                   MaxWidth="400"/>
                                                                    </ToolTip>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Description}"
                                                                             Value="{x:Null}">
                                                                    <Setter Property="ToolTip"
                                                                            Value="{x:Null}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Description}"
                                                                             Value="">
                                                                    <Setter Property="ToolTip"
                                                                            Value="{x:Null}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGridTextColumn.EditingElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn
                                                    Width="150"
                                                    Binding="{Binding Description}"
                                                    Header="Description"/>
                                                <DataGridTextColumn
                                                    Width="50"
                                                    Binding="{Binding TargetRepetitions}"
                                                    Header="Goal"/>
                                                <DataGridTextColumn
                                                    Width="50"
                                                    Binding="{Binding CompletedRepetitions}"
                                                    Header="Done"/>

                                                <!-- Lifecycle State ComboBox Column -->
                                                <DataGridTemplateColumn Width="120"
                                                                        Header="State">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox
                                                                ItemsSource="{Binding Source={StaticResource LifecycleStatesProvider}}"
                                                                SelectedItem="{Binding LifecycleState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                MinWidth="100"
                                                                Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>


                                                <DataGridTextColumn
                                                    Width="100"
                                                    Binding="{Binding LastPracticeDate, StringFormat=d}"
                                                    Header="Last Practice"
                                                    IsReadOnly="True"/>
                                                <DataGridTemplateColumn Width="120"
                                                                        Header="Avg Success (7x)"
                                                                        IsReadOnly="True">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Center">
                                                                <TextBlock Text="{Binding AverageSuccessRatio, StringFormat={}{0:P0}, TargetNullValue=—}"
                                                                           Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding AverageLearningZone}"
                                                                           FontWeight="SemiBold">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground"
                                                                                    Value="Gray"/>
                                                                            <Setter Property="Text"
                                                                                    Value=" "/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding AverageLearningZone}"
                                                                                             Value="Consolidation">
                                                                                    <Setter Property="Foreground"
                                                                                            Value="Green"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding AverageLearningZone}"
                                                                                             Value="Exploration">
                                                                                    <Setter Property="Foreground"
                                                                                            Value="Orange"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding AverageLearningZone}"
                                                                                             Value="Polish">
                                                                                    <Setter Property="Foreground"
                                                                                            Value="DarkBlue"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding AverageLearningZone}"
                                                                                             Value="Mastered">
                                                                                    <Setter Property="Foreground"
                                                                                            Value="DarkGreen"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding AverageLearningZone}"
                                                                                             Value="TooHard">
                                                                                    <Setter Property="Foreground"
                                                                                            Value="Red"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn
                                                    Width="100"
                                                    Binding="{Binding NextDueDate, StringFormat=d}"
                                                    Header="Next Due"
                                                    IsReadOnly="True"/>
                                                <DataGridTextColumn
                                                    Width="60"
                                                    Binding="{Binding Interval}"
                                                    Header="Interval"/>
                                                <DataGridTextColumn
                                                    Width="70"
                                                    Binding="{Binding Status}"
                                                    Header="Status"/>
                                                <DataGridTextColumn
                                                    Width="70"
                                                    Binding="{Binding Difficulty}"
                                                    Header="Difficulty"/>
                                                <DataGridTemplateColumn Width="90"
                                                                        Header="Time (hh:mm:ss)">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                Text="{Binding Converter={StaticResource BarSectionTotalTimeConverter}}"
                                                                ToolTip="{Binding Converter={StaticResource BarSectionTimeTooltipConverter}}"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn Width="70"
                                                                        Header="Practice">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button
                                                                Margin="2"
                                                                Padding="5,2"
                                                                Background="#90EE90"
                                                                Click="PracticeBarSection_Button_Click"
                                                                Content="Practice"
                                                                Tag="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding LifecycleState}"
                                                                                         Value="{x:Static local:LifecycleState.Inactive}">
                                                                                <Setter Property="IsEnabled"
                                                                                        Value="False"/>
                                                                                <Setter Property="Opacity"
                                                                                        Value="0.5"/>
                                                                                <Setter Property="ToolTip"
                                                                                        Value="Cannot practice: Section is Inactive"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                            <DataGrid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Click="PracticeBarSection_Click"
                                                              Header="Practice This Section"/>
                                                    <Separator/>
                                                    <MenuItem Click="EditBarSection_Click"
                                                              Header="Edit Section..."/>
                                                    <MenuItem Click="DeleteBarSection_Click"
                                                              Header="Delete"/>
                                                </ContextMenu>
                                            </DataGrid.ContextMenu>
                                        </DataGrid>

                                    </Grid>

                                </Grid>
                            </TabItem>

