                                                                                        <DataTrigger Binding="{Binding Text, ElementName=textSource}"
                                                                                                     Value="">
                                                                                            <Setter Property="Visibility"
                                                                                                    Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
