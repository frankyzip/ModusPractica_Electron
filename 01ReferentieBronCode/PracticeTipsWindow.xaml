<Window x:Class="ModusPractica.PracticeTipsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModusPractica"
        mc:Ignorable="d"
        Title="Practice Tips - Charles Szczepanek"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <!-- ============ Resources & Styles ============ -->
    <Window.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="BgCard"
                         Color="#FFFFFFFF"
                         Opacity="0.93"/>
        <SolidColorBrush x:Key="BgAlt"
                         Color="#FFF6F6F8"/>
        <SolidColorBrush x:Key="BorderSoft"
                         Color="#19000000"/>
        <SolidColorBrush x:Key="Accent"
                         Color="#5B8DEF"/>
        <SolidColorBrush x:Key="TextMuted"
                         Color="#7A7A7A"/>

        <!-- Typography -->
        <Style x:Key="H1"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="26"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>
        <Style x:Key="H2"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>
        <Style x:Key="Body"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>
        <Style x:Key="Muted"
               TargetType="TextBlock"
               BasedOn="{StaticResource Body}">
            <Setter Property="Foreground"
                    Value="{StaticResource TextMuted}"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius"
                    Value="14"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="0,0,0,18"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#33000000"
                                      BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Background"
                    Value="{StaticResource Accent}"/>
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="MinWidth"
                    Value="140"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Opacity"
                            Value="0.92"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Opacity"
                            Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- ============ Layout ============ -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource BgAlt}"
                Padding="22,18"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Style="{StaticResource H1}">Practice Tips</TextBlock>
                    <TextBlock Style="{StaticResource Muted}"
                               Margin="0,4,0,0">
                        Evidence-based strategies inspired by Charles Szczepanek
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button x:Name="BtnClose"
                            Style="{StaticResource PrimaryButton}"
                            Content="Close"
                            Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,20">
            <TabControl>
                <TabItem Header="Spring Off the Keys">
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}"
                                       Margin="0,0,0,10">Technique for fast jumps and lateral movements ('Spring Off' the Keys)</TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                There are times in all repertoire where we are asked to make fast jumps, lateral jumps back and forth with one or both hands. Sometimes the same direction, sometimes opposite directions, sometimes single notes, sometimes octaves to chords. The underlying technique is, however, very similar.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                The idea is to use the first hand position before the jump as a "spring" to generate momentum in the right direction, and then land in the right place on the other side of the jump.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Key components:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                1. Use the first position as a spring: Use the first hand position, just before the jump, as a "spring" to generate momentum in the right direction.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                2. Feel the release: Feel the release from the key, where the fingers launch you off the key as it were, almost like a staccato-like articulation, although you don't necessarily need to strike the note as a staccato.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                3. Create momentum in the right direction: Ensure that the takeoff is used to create momentum in the direction of the next note you need to land on after the jump.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                4. Form the hand position during flight: Try to have the hand shape you need for landing in mind during the lateral movement or even form it.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                5. One single gesture: The entire process – the takeoff, generating momentum, the lateral movement, thinking about the hand shape and finally striking the next note – should feel like one single gesture. Avoid "hover and play" (play, pause, shift, pause and play again), because that divides the movement into four separate steps, which can cause tension and make it impossible to reach the performance tempo.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Example:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}">
                                In a passage with large jumps (e.g., octave jumps), practice the jump from one note to the other as one fluid movement, even if you play slowly.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="10x Challenge">
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}"
                                       Margin="0,0,0,10">The 10x Challenge for flawless precision</TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                This challenge forces the mind to laser-precise focus and is crucial for improving technique and musical understanding. It can be applied from the simplest passages to the most difficult.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                How it works:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                1. Choose a short, difficult passage: Identify a passage where you struggle, preferably only one or two measures long.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                2. Determine the flawless tempo: Play through the passage and determine the tempo you can maintain today to play the notes and rhythms flawlessly. This tempo is likely significantly slower than the final performance tempo.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                3. Mental focus: Practice the passage mentally in your head before touching the instrument.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                4. Play 10 times perfectly in a row: Start the 10x challenge. Each perfect repetition counts towards the next number.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                5. Start over on a mistake: If you make even the slightest mistake, the counter immediately falls back to one, and the count must start over from the beginning.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                6. Broader application: This concept can be applied to larger sections of the piece (for example, a page or a sonata exposition) by requiring five perfect, consecutive repetitions.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                7. Performance preparation: For live performances, one can perform the piece from beginning to end once per day, for five consecutive days, without stopping or correcting.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}">
                                This solidifies technique, improves musical understanding, and forces the mind to precision.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Avoid Power Saver Mode">
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}"
                                       Margin="0,0,0,10">Avoid 'Power Saver Mode' by pausing</TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                Practicing is a complex dialogue between body, ears, and mind. Just as you ask someone to repeat something if you don't hear it, practicing at the piano should be comparable.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Problem:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                If you repeat a difficult passage non-stop (e.g., 5-30 minutes), the brain goes into "power saver mode" after 2-3 repetitions – it stops building new neural connections because there is no new input.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Solution: Pause between repetitions.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                1. Avoid non-stop repetition: Do not practice difficult passages non-stop by repeating them immediately.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                2. Pause between repetitions: Use a simple but crucial technique: pause between each repetition of the same passage.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                3. Discipline to count: Use the discipline to pause and count to three or even five seconds before playing the passage again.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                4. Reset and reorient: The pause gives the chance to reset the mind, refresh, and refocus. You can consciously decide what specific goal to work on (e.g., fingering, hand position, dynamics, musicality).
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                5. Every time as the first time: This pause ensures that each repetition feels like the first time to the brain, keeping the brain focused on the execution.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Example:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}">
                                In an arpeggio passage from Beethoven's Moonlight Sonata, pause after each repetition to maintain focus on notes, dynamics, or hand position.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Bite-Sized Chunks">
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}"
                                       Margin="0,0,0,10">Practicing in 'Bite-Sized' Pieces</TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                When working on technically challenging measures, the focus should be on extremely small segments.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Why?
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                If you go back far in the piece to get to the difficult spot, the concentration is gone by the time you get there.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                How:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                1. Focus on small pieces: Concentrate on the most difficult measures by splitting them into very small, bite-sized pieces.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                2. Avoid long run-up: Do not go back far in the piece to get to the difficult spot.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                3. Minimal components: Break down the challenge to the smallest possible components, such as one beat plus a sixteenth note.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,5">
                                4. Perfect execution of details: Practice these minute details and ensure that the technically challenging part is executed perfectly with each repetition.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10">
                                5. Gradual expansion: Gradually expand the small piece before putting it back into the context of the full musical phrase.
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold">
                                Example:
                            </TextBlock>
                            <TextBlock Style="{StaticResource Body}">
                                In a passage with hand shifts, practice only the one beat with the shift first, make it perfect, and then expand to the next beat, and so on.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource BgAlt}"
                Padding="22,18"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="0,1,0,0">
            <TextBlock Style="{StaticResource Muted}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap">
                <Run>Practice smarter, not harder – inspired by Pianist Academy: </Run>
                <Hyperlink NavigateUri="https://pianist-academy.thinkific.com/pages/pianist-academy-home"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    https://pianist-academy.thinkific.com/pages/pianist-academy-home
                </Hyperlink>
            </TextBlock>
        </Border>
    </Grid>
</Window>