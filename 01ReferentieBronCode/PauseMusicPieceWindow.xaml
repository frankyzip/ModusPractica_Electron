<Window x:Class="ModusPractica.PauseMusicPieceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModusPractica"
        mc:Ignorable="d"
        Title="Pause Music Piece" Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#F8F8F8"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Pause Music Piece"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20" />

        <!-- Music Piece Title (Read-only) -->
        <Label Grid.Row="1" Grid.Column="0" Content="Music Piece:"
               VerticalAlignment="Center" Margin="0,5" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtMusicPieceTitle"
                 IsReadOnly="True" Background="#F0F0F0"
                 Margin="0,5" Padding="5" />

        <!-- Pause Until Date Selector -->
        <Label Grid.Row="2" Grid.Column="0" Content="Pause Until:"
               VerticalAlignment="Center" Margin="0,5" />
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="DpPauseUntilDate"
                    Margin="0,5" />

        <!-- Explanation -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   TextWrapping="Wrap" Margin="0,10"
                   Text="This music piece will be hidden from the calendar and will not appear in scheduled practice sessions until the selected date." />

        <!-- Note about already scheduled sessions -->
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                   TextWrapping="Wrap" Margin="0,10"
                   Foreground="Gray" FontStyle="Italic"
                   Text="Note: Any already scheduled practice sessions for this music piece will be canceled. On the resume date, the piece will be automatically re-scheduled." />

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnPause" Content="Pause" Width="80"
                    Margin="5" Padding="5" Click="BtnPause_Click"
                    Background="#4A86E8" Foreground="White">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4" />
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="BtnCancel" Content="Cancel" Width="80"
                    Margin="5" Padding="5" Click="BtnCancel_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>