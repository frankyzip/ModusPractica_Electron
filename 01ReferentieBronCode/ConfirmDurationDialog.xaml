<Window x:Class="ModusPractica.ConfirmDurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Practice Time" Height="270" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Confirm Practice Time" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="14" LineHeight="22">
            We've noticed no activity for the last <Run x:Name="TxtInactiveTime" FontWeight="Bold"/> minutes.
            <LineBreak/><LineBreak/>
            Was this part of your focused practice session, or should we adjust the recorded time?
        </TextBlock>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnAdjustTime" Content="No, Adjust Time" MinWidth="140" Height="32" Margin="0,0,10,0" Click="BtnAdjustTime_Click"/>
            <Button x:Name="BtnKeepTime" Content="Yes, Keep Full Time" MinWidth="120" Height="32" IsDefault="True" Click="BtnKeepTime_Click"/>
        </StackPanel>
    </Grid>
</Window>